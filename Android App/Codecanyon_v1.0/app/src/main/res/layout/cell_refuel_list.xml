<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:orientation="horizontal"
        app:cardElevation="@dimen/three_dp">

    <LinearLayout
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <!--Col - Month,Date,Year-->
        <com.ninetynineapps.vehiclemanager.custom.SquareLinearLayout
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:layout_margin="@dimen/five_dp"
                    android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"/>

        </com.ninetynineapps.vehiclemanager.custom.SquareLinearLayout>

        <!--Col - Qty -->
        <com.ninetynineapps.vehiclemanager.custom.SquareLinearLayout
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTheme"
                    android:text="@string/refuel_qty"
                    android:layout_margin="@dimen/five_dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:gravity="center"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvQtyLtr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_marginBottom="@dimen/ten_dp"/>

        </com.ninetynineapps.vehiclemanager.custom.SquareLinearLayout>

        <!--Col - Amount-->
        <com.ninetynineapps.vehiclemanager.custom.SquareLinearLayout
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTheme"
                    android:text="@string/refuel_amount"
                    android:layout_margin="@dimen/five_dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:gravity="center"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_marginBottom="@dimen/ten_dp"/>

        </com.ninetynineapps.vehiclemanager.custom.SquareLinearLayout>

        <!--Col - Km -->
        <com.ninetynineapps.vehiclemanager.custom.SquareLinearLayout
                android:layout_width="@dimen/zero_dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTheme"
                    android:text="@string/refuel_fuel_km"
                    android:layout_margin="@dimen/five_dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:gravity="center"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvKm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/ten_dp"
                    android:layout_marginBottom="@dimen/ten_dp"/>

        </com.ninetynineapps.vehiclemanager.custom.SquareLinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>